         </svg>Campeonatos</h1>
<style type="text/css">
    th {

        background-color: lightblue;
    }
</style>
<p>
    @Html.ActionLink("Listar Todo", "./List")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar por Nombre: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" />
    </p>
}
<table style="width: 100%" class="tableCampeonatos">
    <tr>
        <th>
            <h5>ID</h5>
        </th>
        <th>
            <h5>Nombre</h5>
        </th>
        <th>
            <h5>Fecha_Inicial</h5>
        </th>
        <th>
            <h5>Fecha_Fin</h5>
        </th>
        <th>
            <h5>Reglamento</h5>
        </th>
        <th>
            <h5>Numero_Eliminatorias</h5>
        </th>
         <th>
            <h5>Numero_Equipos_Premiados</h5>
        </th>
        <th>
            <h5>Estado </h5>
        </th> 
        <th>
            <h5>Numero_Equipos </h5>
        </th>
        <th>
            <h5>Categoria </h5>
        </th>
        <th>
            <h5>Modalidad</h5>
        </th>
        <th>
            <h5>Rama</h5>
        </th>    

    </tr>
    @foreach (var campeonato in Model.campeonatos)
    {
        <tr>
            <td>@campeonato.Id</td>
            <td>@campeonato.Nombre</td>
            <td>@campeonato.Fecha_Inicial</td>
            <td>@campeonato.Fecha_Fin</td>
            <td>@campeonato.Reglamento</td>
            <td>@campeonato.Numero_Eliminatorias</td>
            <td>@campeonato.Numero_Equipos_Premiados</td>
            <td>@campeonato.Estado</td>
            <td>@campeonato.Numero_Equipos</td>
            <td>@campeonato.categoria</td>
            <td>@campeonato.modalidad</td>
            <td>@campeonato.rama</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-campeonatoId="@campeonato.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-receipt"
                    viewBox="0 0 18 18">
                        <path
                        d="M1.92.506a.5.5 0 0 1 .434.14L3 1.293l.646-.647a.5.5 0 0 1 .708 0L5 1.293l.646-.647a.5.5 0 0 1 .708 0L7 1.293l.646-.647a.5.5 0 0 1 .708 0L9 1.293l.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .801.13l.5 1A.5.5 0 0 1 15 2v12a.5.5 0 0 1-.053.224l-.5 1a.5.5 0 0 1-.8.13L13 14.707l-.646.647a.5.5 0 0 1-.708 0L11 14.707l-.646.647a.5.5 0 0 1-.708 0L9 14.707l-.646.647a.5.5 0 0 1-.708 0L7 14.707l-.646.647a.5.5 0 0 1-.708 0L5 14.707l-.646.647a.5.5 0 0 1-.708 0L3 14.707l-.646.647a.5.5 0 0 1-.801-.13l-.5-1A.5.5 0 0 1 1 14V2a.5.5 0 0 1 .053-.224l.5-1a.5.5 0 0 1 .367-.27zm.217 1.338L2 2.118v11.764l.137.274.51-.51a.5.5 0 0 1 .707 0l.646.647.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.509.509.137-.274V2.118l-.137-.274-.51.51a.5.5 0 0 1-.707 0L12 1.707l-.646.647a.5.5 0 0 1-.708 0L10 1.707l-.646.647a.5.5 0 0 1-.708 0L8 1.707l-.646.647a.5.5 0 0 1-.708 0L6 1.707l-.646.647a.5.5 0 0 1-.708 0L4 1.707l-.646.647a.5.5 0 0 1-.708 0l-.509-.51z" />
                        <path
                        d="M3 4.5a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5zm8-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5z" />
                    </svg>Detalles </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-campeonatoId="@campeonato.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil"
                    viewBox="0 0 18 18">
                        <path
                        d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                    </svg>Editar
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn" asp-page="./Delete" asp-route-campeonatoId="@campeonato.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-person-x-fill" viewBox="0 0 18 18">
